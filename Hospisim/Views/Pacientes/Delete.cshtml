@model Hospisim.Domain.Entities.Paciente

@{
    ViewData["Title"] = "Excluir Paciente";
}

<h1>Excluir Paciente</h1>

<h3>Tem certeza que deseja excluir este paciente?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome Completo</dt>
        <dd class="col-sm-10">@Model.NomeCompleto</dd>

        <dt class="col-sm-2">CPF</dt>
        <dd class="col-sm-10">@Model.CPF</dd>

        <dt class="col-sm-2">Data de Nascimento</dt>
        <dd class="col-sm-10">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Sexo</dt>
        <dd class="col-sm-10">@Model.Sexo</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
