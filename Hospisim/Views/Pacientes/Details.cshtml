@model Hospisim.Domain.Entities.Paciente

@{
    ViewData["Title"] = "Detalhes do Paciente";
}

<h1>Detalhes do Paciente</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome Completo</dt>
        <dd class="col-sm-10">@Model.NomeCompleto</dd>

        <dt class="col-sm-2">CPF</dt>
        <dd class="col-sm-10">@Model.CPF</dd>

        <dt class="col-sm-2">Data de Nascimento</dt>
        <dd class="col-sm-10">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Sexo</dt>
        <dd class="col-sm-10">@Model.Sexo</dd>

        <dt class="col-sm-2">Tipo Sanguíneo</dt>
        <dd class="col-sm-10">@Model.TipoSanguineo</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Endereço Completo</dt>
        <dd class="col-sm-10">@Model.EnderecoCompleto</dd>

        <dt class="col-sm-2">Número do Cartão SUS</dt>
        <dd class="col-sm-10">@Model.NumeroCartaoSUS</dd>

        <dt class="col-sm-2">Estado Civil</dt>
        <dd class="col-sm-10">@Model.EstadoCivil</dd>

        <dt class="col-sm-2">Possui Plano de Saúde?</dt>
        <dd class="col-sm-10">@(Model.PossuiPlanoSaude ? "Sim" : "Não")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
