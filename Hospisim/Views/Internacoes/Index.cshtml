@model IEnumerable<Hospisim.Domain.Entities.Internacao>

@{
    ViewData["Title"] = "Lista de Internações";
}

<h1>Internações</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Internação</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Paciente</th>
            <th>Atendimento</th>
            <th>Data Entrada</th>
            <th>Previsão de Alta</th>
            <th>Motivo</th>
            <th>Quarto</th>
            <th>Leito</th>
            <th>Setor</th>
            <th>Status</th>
            <th></th>  <!-- Coluna para ações -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Paciente?.NomeCompleto</td>
                <td>@item.Atendimento?.Id.ToString()</td>  <!-- Ajuste conforme o que quer mostrar -->
                <td>@item.DataEntrada.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(item.PrevisaoAlta.HasValue ? item.PrevisaoAlta.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                <td>@item.MotivoInternacao</td>
                <td>@item.Quarto</td>
                <td>@item.Leito</td>
                <td>@item.Setor</td>
                <td>@item.StatusInternacao</td>
                <td>

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
