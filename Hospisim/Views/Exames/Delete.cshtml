@model Hospisim.Domain.Entities.Exame

@{
    ViewData["Title"] = "Excluir Exame";
}

<h1>Excluir Exame</h1>

<h3>Tem certeza de que deseja excluir este exame?</h3>
<div>
    <h4>Exame</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataSolicitacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataSolicitacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataRealizacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRealizacao)
        </dd>
        <dt class = "col-sm-2">
            Paciente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Atendimento.Paciente.NomeCompleto)
        </dd>
        <dt class = "col-sm-2">
            Médico Solicitante
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Atendimento.ProfissionalSaude.NomeCompleto)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à Lista</a>
    </form>
</div>