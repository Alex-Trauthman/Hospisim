@model Hospisim.Domain.Entities.Prescricao

@{
    ViewData["Title"] = "Detalhes da Prescrição";
}

<h1>Detalhes da Prescrição</h1>

<hr />
<dl class="row">
    <dt class="col-sm-2">Medicamento</dt>
    <dd class="col-sm-10">@Model.Medicamento</dd>

    <dt class="col-sm-2">Dosagem</dt>
    <dd class="col-sm-10">@Model.Dosagem</dd>

    <dt class="col-sm-2">Frequência</dt>
    <dd class="col-sm-10">@Model.Frequencia</dd>

    <dt class="col-sm-2">Via Administração</dt>
    <dd class="col-sm-10">@Model.ViaAdministracao</dd>

    <dt class="col-sm-2">Início</dt>
    <dd class="col-sm-10">@Model.DataInicio</dd>

    <dt class="col-sm-2">Fim</dt>
    <dd class="col-sm-10">@Model.DataFim?.ToString("g")</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.StatusPrescricao</dd>

    <dt class="col-sm-2">Observações</dt>
    <dd class="col-sm-10">@Model.Observacoes</dd>

    <dt class="col-sm-2">Reações Adversas</dt>
    <dd class="col-sm-10">@Model.ReacoesAdversas</dd>

    <dt class="col-sm-2">Paciente</dt>
    <dd class="col-sm-10">@Model.Atendimento?.Paciente?.NomeCompleto</dd>

    <dt class="col-sm-2">Profissional</dt>
    <dd class="col-sm-10">@Model.Profissional?.NomeCompleto</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a> |
    <a asp-action="Index">Voltar à Lista</a>
</div>
