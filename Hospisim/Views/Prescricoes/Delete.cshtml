@model Hospisim.Domain.Entities.Prescricao

@{
    ViewData["Title"] = "Excluir Prescrição";
}

<h1>Excluir Prescrição</h1>

<h3>Tem certeza que deseja excluir esta prescrição?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Medicamento</dt>
        <dd class="col-sm-10">@Model.Medicamento</dd>

        <dt class="col-sm-2">Dosagem</dt>
        <dd class="col-sm-10">@Model.Dosagem</dd>

        <dt class="col-sm-2">Frequência</dt>
        <dd class="col-sm-10">@Model.Frequencia</dd>

        <dt class="col-sm-2">Via Administração</dt>
        <dd class="col-sm-10">@Model.ViaAdministracao</dd>

        <dt class="col-sm-2">Data Início</dt>
        <dd class="col-sm-10">@Model.DataInicio.ToString("g")</dd>

        <dt class="col-sm-2">Data Fim</dt>
        <dd class="col-sm-10">@Model.DataFim?.ToString("g")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.StatusPrescricao</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
