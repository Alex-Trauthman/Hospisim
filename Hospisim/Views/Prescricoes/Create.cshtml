@model Hospisim.Domain.Entities.Prescricao

@{
    ViewData["Title"] = "Nova Prescrição";
}

<h1>Nova Prescrição</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AtendimentoId" class="control-label">Atendimento</label>
                <select asp-for="AtendimentoId" class="form-control" asp-items="ViewBag.AtendimentoId"></select>
            </div>

            <div class="form-group">
                <label asp-for="ProfissionalId" class="control-label">Profissional</label>
                <select asp-for="ProfissionalId" class="form-control" asp-items="ViewBag.ProfissionalId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Medicamento" class="control-label"></label>
                <input asp-for="Medicamento" class="form-control" />
                <span asp-validation-for="Medicamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dosagem" class="control-label"></label>
                <input asp-for="Dosagem" class="form-control" />
                <span asp-validation-for="Dosagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Frequencia" class="control-label"></label>
                <input asp-for="Frequencia" class="form-control" />
                <span asp-validation-for="Frequencia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ViaAdministracao" class="control-label"></label>
                <input asp-for="ViaAdministracao" class="form-control" />
                <span asp-validation-for="ViaAdministracao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" type="datetime-local" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" type="datetime-local" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="StatusPrescricao" class="control-label"></label>
                <input asp-for="StatusPrescricao" class="form-control" />
                <span asp-validation-for="StatusPrescricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReacoesAdversas" class="control-label"></label>
                <textarea asp-for="ReacoesAdversas" class="form-control"></textarea>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
