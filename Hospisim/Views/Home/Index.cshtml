@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo ao HOSPISIM</h1>
    <p>Sistema de Gestão Hospitalar do Hospital Vida Plena</p>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Pacientes
            </div>
            <div class="card-body">
                <h5 class="card-title">Gerenciamento de Pacientes</h5>
                <p class="card-text">Cadastre e gerencie informações dos pacientes.</p>
                <a asp-controller="Pacientes" asp-action="Index" class="btn btn-primary">Acessar</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Profissionais
            </div>
            <div class="card-body">
                <h5 class="card-title">Equipe Médica</h5>
                <p class="card-text">Gerencie os profissionais de saúde.</p>
                <a asp-controller="ProfissionaisSaude" asp-action="Index" class="btn btn-primary">Acessar</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Atendimentos
            </div>
            <div class="card-body">
                <h5 class="card-title">Registro de Atendimentos</h5>
                <p class="card-text">Consultas, exames e internações.</p>
                <a asp-controller="Atendimentos" asp-action="Index" class="btn btn-primary">Acessar</a>
            </div>
        </div>
    </div>
</div>