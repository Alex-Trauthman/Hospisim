@model IEnumerable<Hospisim.Domain.Entities.AltaHospitalar>

@{
    ViewData["Title"] = "Altas Hospitalares";
}

<h1>Altas Hospitalares</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Alta Hospitalar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Paciente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CondicaoPaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstrucoesPosAlta)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Internacao.Paciente.NomeCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CondicaoPaciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstrucoesPosAlta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Internacao.Quarto)/@Html.DisplayFor(modelItem => item.Internacao.Leito)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>